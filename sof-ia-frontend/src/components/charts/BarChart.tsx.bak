import React from 'react';
import { BarChart as RechartsBarChart, Bar, XAxis, YAxis, CartesianGrid, Tooltip, Legend, ResponsiveContainer } from 'recharts';

interface BarChartProps {
  data: any[];
  xKey: string;
  bars: Array<{
    key: string;
    color: string;
    name: string;
  }>;
  height?: number;
}

/**
 * Componente de gr√°fico de barras
 * Usado para comparaciones
 */
const BarChart: React.FC<BarChartProps> = ({ data, xKey, bars, height = 300 }) => {
  return (
    <ResponsiveContainer width="100%" height={height}>
      <RechartsBarChart data={data}>
        <CartesianGrid strokeDasharray="3 3" stroke="#E9ECEF" />
        <XAxis 
          dataKey={xKey} 
          tick={{ fill: '#6C757D', fontSize: 12, fontFamily: 'Open Sans' }}
          axisLine={{ stroke: '#CED4DA' }}
        />
        <YAxis 
          tick={{ fill: '#6C757D', fontSize: 12, fontFamily: 'Open Sans' }}
          axisLine={{ stroke: '#CED4DA' }}
        />
        <Tooltip 
          contentStyle={{ 
            backgroundColor: 'white', 
            border: '1px solid #E9ECEF',
            borderRadius: '8px',
            fontFamily: 'Open Sans'
          }}
        />
        <Legend 
          wrapperStyle={{ fontFamily: 'Poppins' }}
        />
        {bars.map((bar) => (
          <Bar
            key={bar.key}
            dataKey={bar.key}
            fill={bar.color}
            name={bar.name}
            radius={[8, 8, 0, 0]}
          />
        ))}
      </RechartsBarChart>
    </ResponsiveContainer>
  );
};

export default BarChart;