FROM node:20-alpine AS build

WORKDIR /app

COPY sof-ia-frontend/package*.json ./
RUN npm ci

COPY sof-ia-frontend ./

ARG VITE_API_URL
ENV VITE_API_URL=$VITE_API_URL

ARG VITE_CHATBOT_WEB_API_URL
ENV VITE_CHATBOT_WEB_API_URL=$VITE_CHATBOT_WEB_API_URL

ARG VITE_PUBLIC_CHATBOT_URL
ENV VITE_PUBLIC_CHATBOT_URL=$VITE_PUBLIC_CHATBOT_URL

ARG VITE_WEBCHAT_TENANT_ID
ENV VITE_WEBCHAT_TENANT_ID=$VITE_WEBCHAT_TENANT_ID

ARG VITE_TELEGRAM_BOT_URL
ENV VITE_TELEGRAM_BOT_URL=$VITE_TELEGRAM_BOT_URL

ARG VITE_PUBLIC_CHATBOT_ONLY
ENV VITE_PUBLIC_CHATBOT_ONLY=$VITE_PUBLIC_CHATBOT_ONLY

RUN npx vite build

FROM nginx:1.27-alpine

COPY --from=build /app/dist /usr/share/nginx/html
COPY sof-ia-frontend/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
